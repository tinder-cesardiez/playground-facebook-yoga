<?xml version="1.0" encoding="utf-8"?>

<com.facebook.yoga.android.YogaLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yoga="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    yoga:yg_alignItems="center"
    yoga:yg_flexDirection="row"
    yoga:yg_marginHorizontal="10dp"
    yoga:yg_marginTop="5dp">

    <ImageView
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:src="@drawable/ic_launcher_background"
        yoga:yg_flex="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm a manual addition"
        android:textColor="@color/children_text"
        yoga:yg_flex="1"
        yoga:yg_marginStart="16dp" />
</com.facebook.yoga.android.YogaLayout>